{
  "name": "scratch-vscode-web",
  "displayName": "scratch-vscode-web",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "// activationEvents" : "Our extension, besides adding the scratch custom editor, modifies the 'autosave' setup to 'off'", 
  "// activationEvents1" : "And we need this setup active for all editors not only for the scratch editor, just after the vscode starts",
  "activationEvents": [
    "onStartupFinished"
	],
  "browser": "./dist/web/extension.js",
  "contributes": 
    {"customEditors": [
			{
				"viewType": "scratch-vs-code-web.scratch-editor",
				"displayName": "Scratch + Leopard",
				"selector": [
					{
						"filenamePattern": "*.sb3"
					}
				]
			}
		]
	},
  "capabilities": {
    "virtualWorkspaces": true
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=none --extensionDevelopmentPath=."
  },
  "devDependencies": {
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.6",
    "@types/vscode": "^1.87.0",
    "@types/webpack-env": "^1.18.4",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-web": "^0.0.52",
    "assert": "^2.1.0",
    "eslint": "^8.56.0",
    "mocha": "^10.3.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
